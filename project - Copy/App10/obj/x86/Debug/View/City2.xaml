<Page
    x:Class="App10.View.City2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App10.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:viewModel="using:App10.ViewModel"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewModel:AccomodationVM/>
    </Page.DataContext>


    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="40">
            </RowDefinition>
            <RowDefinition Height="auto">
            </RowDefinition>
            <RowDefinition Height="auto">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200">
            </ColumnDefinition>
            <ColumnDefinition Width="auto">
            </ColumnDefinition>
            <ColumnDefinition Width="auto">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Button x:ConnectionId='1'
            Grid.Row="1" 
            Grid.Column="0" 
            Width="180"
            Height="60"
            Margin="10,99,0,346"
            x:Name="Accommodation1"
            Content="Lyon"
            >
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="Click">
                    <core:InvokeCommandAction Command="{Binding Accomodation1}"/>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Button>

        <Button x:ConnectionId='2'
            Grid.Row="1" 
            Grid.Column="0" 
            Width="180"
            Height="60"
            Margin="10,174,0,271"
            x:Name="Accommodation2"
            Content="L'Escapade"
            >
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="Click">
                    <core:InvokeCommandAction Command="{Binding Accomodation2}"/>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Button>

        <Button x:ConnectionId='3'
            Grid.Row="1" 
            Grid.Column="0" 
            Width="180"
            Height="60"
            Margin="10,247,0,198"
            x:Name="Accommodation3"
            Content="Les Carres"
            >
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="Click">
                    <core:InvokeCommandAction Command="{Binding Accomodation3}"/>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Button>

        <Button x:ConnectionId='4'
        	Grid.Row="1" 
        	Grid.Column="0" 
        	Width="180"
        	Height="60"
        	Margin="10,320,0,125"
        	x:Name="Accommodation4"
        	Content="Booking"                             
            Opacity="{Binding Success, Mode=TwoWay}"
            IsEnabled="{Binding CanBook, Mode=TwoWay}"
            IsHitTestVisible="{Binding CanBook, Mode=TwoWay}"
            />

        <Image x:ConnectionId='5' x:Name="image" Source="../Assets/7.jpg" Grid.Column="2" HorizontalAlignment="Left" Height="199" Margin="30,15,-375,0" Grid.Row="1" VerticalAlignment="Top" Width="345"/>
        <TextBlock x:ConnectionId='6' x:Name="textBlock" Grid.Column="2" HorizontalAlignment="Left" Height="113" Margin="30,239,-945,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="915" Text="The city of Lyon is known for its historical and architectural landmarks and is a UNESCO World Heritage Site. Lyon was historically known as an important area for the production and weaving of silk. Since the late 20th century, it has developed a reputation as the capital of gastronomy in France and in the world."/>
        <Image x:ConnectionId='7' x:Name="image1" Source="../Assets/11.jpg" Grid.Column="2" HorizontalAlignment="Left" Height="199" Margin="380,15,-695,0" Grid.Row="1" VerticalAlignment="Top" Width="315"/>
        <Image x:ConnectionId='8' x:Name="image3" Grid.Column="2" Source="{Binding ImageUrl, Mode=TwoWay}" HorizontalAlignment="Left" Height="230" Margin="50,405,-395,-130" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Top" Width="345"/>
        <TextBlock x:ConnectionId='9' x:Name="textBlock1" Grid.Column="2" HorizontalAlignment="Left" Height="230" Margin="440,405,-1035,-130" Grid.Row="1" Grid.RowSpan="2" TextWrapping="Wrap" Text="{ Binding Description, Mode=TwoWay}" VerticalAlignment="Top" Width="595"/>
        <Button x:ConnectionId='10' x:Name="button" Content="Back" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="130"                     />
        <Button x:ConnectionId='11' x:Name="button5" Content="LogOut" Grid.Column="2" HorizontalAlignment="Left" Height="35" Margin="905,15,-1070,0" Grid.Row="1" VerticalAlignment="Top" Width="165"                      />
        <TextBlock x:ConnectionId='12' x:Name="textBlock3" Grid.Column="2" HorizontalAlignment="Left" Height="35" Margin="727,15,-900,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding CurrentCustomer}" VerticalAlignment="Top" Width="173"/>



    </Grid>
</Page>

